<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/f_main_card_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/f_main_title_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="start"
                android:text="@string/f_placeholder"
                android:textSize="@dimen/f_main_content_font_title_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/f_main_pack_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:gravity="end"
                android:text="@string/f_placeholder"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/f_main_hierarchy_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/f_placeholder"
                android:textColor="@color/color_primary"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/f_main_separator_height"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/f_main_doc_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/f_placeholder_big" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/f_main_separator_height"
            android:background="@android:color/transparent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/f_placeholder"
            android:textAllCaps="true"
            android:textColor="@color/color_accent"
            android:textStyle="bold" />

    </LinearLayout>
</android.support.v7.widget.CardView>