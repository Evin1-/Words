<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:padding="15dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"  >

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/inputTerm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab1"
            android:src="@drawable/ic_mic_white_48dp"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtVoice"
            android:textStyle="bold"
            android:textSize="@dimen/f_search_term_voice_message_font_size"
            android:text="@string/f_search_term_speak_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recAutoVoice"
        android:layout_margin="@dimen/f_search_term_recycler_layout_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>